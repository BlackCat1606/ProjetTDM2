<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <CheckBoxPreference
        android:defaultValue="false"
        android:key="dark"
        android:title="@string/dark"
        android:icon="@drawable/ic_night_mode"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="imagequality"
        android:summaryOff="@string/low"
        android:summaryOn="@string/high"
        android:title="@string/image"
        android:icon="@drawable/ic_image"/>


    <Preference
        android:enabled="true"
        android:key="license"
        android:selectable="true"
        android:summary=""
        android:title="@string/license"
        android:icon="@drawable/ic_license"/>

    <Preference
        android:enabled="true"
        android:key="Version"
        android:selectable="true"
        android:summary="2.1.2"
        android:title="@string/version"
        android:icon="@drawable/ic_info"/>

    <Preference
        android:enabled="true"
        android:key="Share"
        android:selectable="true"
        android:title="@string/shareappdetails"
        android:icon="@drawable/ic_share"/>



    <Preference
        android:enabled="true"
        android:key="About"
        android:selectable="true"
        android:title="@string/about"
        android:icon="@drawable/ic_person"/>


</PreferenceScreen>
